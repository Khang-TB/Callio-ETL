# BigQuery credentials (choose one)
SERVICE_ACCOUNT_KEY_FILE=./path/to/service-account.json
# SERVICE_ACCOUNT_KEY_JSON='{"type":"service_account","project_id":"<project>","private_key_id":"<id>","private_key":"-----BEGIN PRIVATE KEY-----..."}'

# Callio tenant credentials (multi-tenant supported)
# Alternatively point CALLIO_ACCOUNTS_FILE to a JSON file with the same structure.
CALLIO_ACCOUNTS_JSON='[{"tenant":"TENANT1","email":"user@example.com","password":"secret"}]'

# Required project/dataset context (override defaults if needed)
BQ_PROJECT_ID=your-project-id
BQ_DATASET_ID=your_dataset
BQ_LOCATION=asia-southeast1

# Scheduler (UTC times, format HH:MM)
SCHEDULER_RUN_TIMES_UTC=02:30,04:00,06:00,08:00,11:00
SCHEDULER_STAFF_GROUP_TIME_UTC=02:30

# Window / limits
OVERLAP_MS=180000
DAYS_TO_FETCH_IF_EMPTY=30
LIMIT_RECORDS_PER_ENDPOINT=500

# API tuning
API_TIMEOUT=90
API_PAGE_SIZE=500
# API_TIME_SLICE_MS=86400000
# API_MIN_SLICE_MS=3600000
# CALLIO_API_BASE_URL=https://clientapi.phonenet.io

# Logging
LOG_LEVEL=INFO
